{
  "include": ["./src/*.ts"],
  "exclude": ["node_modules", "build", "dist"],
  "compilerOptions": {
    "target": "es5",
    "lib": ["ES2015", "DOM"],
    "module": "CommonJS",
    "rootDir": "./",
    "allowUmdGlobalAccess": true,
    "allowJs": true,
    "outDir": "./",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
